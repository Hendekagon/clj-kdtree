<project name="clj-kdtree" default="test">
  <description>
    Clojure Kd-trees.
  </description>

  <property name="tests.dir" location="test"/>

  <path id="classpath">
    <path location="src"/>
    <fileset dir="lib">
      <include name="*.jar"/>
    </fileset>
  </path>


  <target name="test" description="Run tests">
    <java fork="true" classname="clojure.lang.Script">
      <classpath>
        <path refid="classpath"/>
        <path location="."/>
      </classpath>
      <arg value="${tests.dir}/run.clj"/>
    </java>
  </target>
</project>